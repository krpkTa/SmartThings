<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartThings.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Блок статуса подключения -->
            <Frame BackgroundColor="{StaticResource SecondaryColor}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Сетевой статус:" FontAttributes="Bold"/>
                    <Label Text="{Binding ConnectionStatus}" FontSize="16"/>
                    <Label Text="{Binding LocalIpAddress}" FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Кнопка обновления -->
            <Button Text="Обновить IP" 
                Command="{Binding ReconnectCommand}"
                BackgroundColor="{StaticResource PrimaryColor}"
                TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
